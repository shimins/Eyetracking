<UserControl x:Class="WPF.InputUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="200" Background="Transparent">
    <Grid>
        <ComboBox Height="21" HorizontalAlignment="Left" Margin="0,10,0,0" Name="_trackerCombo" VerticalAlignment="Top" Width="155" />
        <Button Height="23" Margin="27,36,0,0" Name="_trackButton" VerticalAlignment="Top" HorizontalAlignment="Left" Width="99" RenderTransformOrigin="-0.046,1.926" Click="_trackButton_Click">Track</Button>

        <Label x:Name="label" Content="Radius:" HorizontalAlignment="Left" Margin="0,76,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.175,2.199"/>
        <TextBox x:Name="innerRadiusBox" HorizontalAlignment="Left" Height="23" Margin="10,99,0,0" TextWrapping="Wrap" Text="300" VerticalAlignment="Top" Width="145"/>

        <Label x:Name="label1" Content="Blurrness" HorizontalAlignment="Left" Margin="0,173,0,0" VerticalAlignment="Top" RenderTransformOrigin="3.029,2.782"/>
        <TextBox x:Name="circleCountBox" HorizontalAlignment="Left" Height="23" Margin="10,196,0,0" TextWrapping="Wrap" Text="5" VerticalAlignment="Top" Width="145"/>
        <Button x:Name="ApplyChange" Content="Apply Changes" HorizontalAlignment="Left" Margin="27,242,0,0" VerticalAlignment="Top" Width="99" Click="_applyButton_Click"/>
        <CheckBox x:Name="drawCircles" Content="Draw Circles" HorizontalAlignment="Left" Margin="10,224,0,0" VerticalAlignment="Top" />
        <Label x:Name="OuterRadiusLabel" Content="Outer Radius:" HorizontalAlignment="Left" Margin="0,122,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.806,0.391"/>
        <TextBox x:Name="outerRadiusBox" HorizontalAlignment="Left" Height="23" Margin="10,150,0,0" TextWrapping="Wrap" Text="600" VerticalAlignment="Top" Width="145"/>
    </Grid>
</UserControl>
